---
const SOCIALNETWORKS = [
	{
		name: 'Github',
		url: 'https://github.com/danielcgilibert/blog-template'
	},

	{
		name: 'Twitter',
		url: 'https://github.com/danielcgilibert/blog-template'
	}
]

const today = new Date()
---

<footer class=''>
	<div>
		<h3 class=''>Social</h3>
		<ul>
			{
				SOCIALNETWORKS.map((network) => (
					<li>
						<a class='' href={network.url} target='_blank' aria-label={network.name}>
							{network.name}
						</a>
					</li>
				))
			}
		</ul>
	</div>
	<a href='/tags' class='flex items-center gap-1 text-2xl md:text-base'>Tags</a>
	<p class=''>
		Your Name &copy; 2022 - {today.getFullYear()}. All rights reserved.
	</p>
</footer>
